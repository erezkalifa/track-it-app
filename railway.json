{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "trackIt-backend/Dockerfile",
    "watchPatterns": ["trackIt-backend/**/*"]
  },
  "deploy": {
    "startCommand": "cd trackIt-backend && python run_server.py production",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/",
    "healthcheckTimeout": 100
  }
}
